@model List<BTL_NMCNPM.Models.tblHoSoNhanVien>

@{
    ViewData["Title"] = "Danh Sách Ứng Tuyển";
    Layout = "~/Views/Shared/AccountLayout.cshtml";
}

<h2 class="text-center">Danh sách ứng tuyển</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Mã nhân viên</th>
            <th>Tên nhân viên</th>
            <th>Email</th>
            <th>CCCD</th>
            <th>Ngày sinh</th>
            <th>Số điện thoại</th>
            <th>Địa chỉ</th>
            <th>Học vấn & kỹ năng</th>
            <th>Kinh nghiệm & thành tích</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.sMaNV</td>
                <td>@item.sTenNV</td>
                <td>@item.sEmail</td>
                <td>@item.iCCCD</td>
                <td>@(item.dNgaysinh.HasValue ? item.dNgaysinh.Value.ToString("yyyy-MM-dd") : "N/A")</td>
                <td>@item.iSDT</td>
                <td>@item.sDiachi</td>
                <td>@item.sHocvan</td>
                <td>@item.sKinhnghiem</td>
                <td>
                    <a asp-controller="Vieclam" asp-action="Guithongbao" asp-route-sMaNV="@item.sMaNV" class="btn btn-success text-white">
                        Gửi thông báo
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
