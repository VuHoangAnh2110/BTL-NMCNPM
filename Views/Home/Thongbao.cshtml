@model List<BTL_NMCNPM.Models.tblThongBao>
@{
    ViewBag.Title = "Thongbao";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<h2 class="text-center">Thông báo</h2>
<table class="table table-striped table-hover">
    <tr>
        <!-- TABLE HEADING -->
        <th>Mã thông báo</th>
        <th>Ngày thông báo</th>
        <th>Nội dung</th>
    </tr>
    <!-- TABLE DATA -->
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.sMaThongbao</td>
            <td>@item.dNgayThongbao.Value.ToString("yyyy-MM-dd")</td>
            <td>@item.sNoidung</td>
        </tr>
    }
</table>

