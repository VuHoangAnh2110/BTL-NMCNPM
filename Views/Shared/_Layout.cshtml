<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BTL_NMCNPM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/BTL_NMCNPM.styles.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

</head>
<body>
@if (ViewData["Title"] != "Login")
{
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow p-3">
            <div class="container-fluid">
                @* <!-- Logo --> *@
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <i class="bi bi-briefcase-fill me-2"></i>
                    <span>Sàn Giao Dịch Việc Làm</span>
                </a>

                @* <!-- Nút Toggle trên màn hình nhỏ --> *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive"
                    aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @* <!-- Menu --> *@
                <div class="collapse navbar-collapse justify-content-end" id="navbarResponsive">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/">
                                <i class="bi bi-house-door me-1"></i>Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Jobs">
                                <i class="bi bi-search me-1"></i>Tìm việc
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Employers">
                                <i class="bi bi-building me-1"></i>Nhà tuyển dụng
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Privacy">
                                <i class="bi bi-shield-lock me-1"></i>Quyền riêng tư
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-primary px-3 rounded-pill" href="/Account/Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Đăng nhập
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
} else {
    <header class="">
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow p-3">
            <div class="container-fluid">
                @* <!-- Logo --> *@
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <i class="bi bi-briefcase-fill me-2"></i>
                    <span>Sàn Giao Dịch Việc Làm</span>
                </a>

                @* <!-- Nút Toggle trên màn hình nhỏ --> *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive"
                    aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>                
            </div>
        </nav>
    </header>
}

@if (ViewData["Title"] != "Login")
{
    <div class="container" style="height:70vh">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
} else {
    <div class="background">
        <div class="container pb-3 pt-3">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
}

    <footer class="neon-footer text-white pt-4 pb-3">
        <div class="container">
            <div class="row">
                <!-- Cột 1: Giới thiệu -->
                <div class="col-md-4">
                    <h5 class="fw-bold text-neon">Sàn Giao Dịch Việc Làm</h5>
                    <p class="small">
                        Kết nối nhà tuyển dụng với ứng viên, tạo cơ hội nghề nghiệp chất lượng nhất.
                    </p>
                </div>

                <!-- Cột 2: Liên kết nhanh -->
                <div class="col-md-4">
                    <h5 class="fw-bold text-neon">Liên kết nhanh</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Index" class="footer-link"><i class="bi bi-house-door-fill"></i> Trang chủ</a></li>
                        <li><a asp-controller="Jobs" asp-action="Index" class="footer-link"><i class="bi bi-briefcase-fill"></i> Việc làm</a></li>
                        <li><a asp-controller="Employers" asp-action="Index" class="footer-link"><i class="bi bi-building"></i> Nhà tuyển dụng</a></li>
                        <li><a asp-controller="Candidates" asp-action="Index" class="footer-link"><i class="bi bi-person-fill"></i> Ứng viên</a></li>
                    </ul>
                </div>

                <!-- Cột 3: Liên hệ -->
                <div class="col-md-4">
                    <h5 class="fw-bold text-neon">Liên hệ</h5>
                    <p class="small mb-1"><i class="bi bi-geo-alt-fill"></i> Đường phố, Phường Định Công, Quận Hoàng Mai, TP.Hà Nội </p>
                    <p class="small mb-1"><i class="bi bi-telephone-fill"></i> 0373 - *** - 856 </p>
                    <p class="small"><i class="bi bi-envelope-fill"></i> hotroG13@sangiaodichvieclam.com </p>
                </div>
            </div>

            <!-- Dòng phân cách -->
            <hr class="my-3 border-neon">

            <!-- Mạng xã hội -->
            <div class="text-center">
                <a href="#" class="social-icon"><i class="bi bi-facebook"></i></a>
                <a href="#" class="social-icon"><i class="bi bi-linkedin"></i></a>
                <a href="#" class="social-icon"><i class="bi bi-twitter"></i></a>
                <a href="#" class="social-icon"><i class="bi bi-instagram"></i></a>
            </div>

            <!-- Bản quyền -->
            <div class="text-center mt-3 small">
                &copy; 2025 - Sàn Giao Dịch Việc Làm. G13. Công ty cổ phần công nghệ OSP.
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
